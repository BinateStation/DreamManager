<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ADI_dream_image"
            android:layout_width="100dp"
            android:layout_height="@dimen/item_image_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/label_margin"
            android:layout_marginRight="@dimen/label_margin"
            android:contentDescription="@string/title_activity_dream"
            android:src="@drawable/ic_dream_manager_logo" />

        <TextView
            android:id="@+id/ADI_target_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/label_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="10,00,000" />

        <TextView
            android:id="@+id/ADI_dream_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/label_margin"
            android:layout_toEndOf="@id/ADI_dream_image"
            android:layout_toLeftOf="@id/ADI_target_amount"
            android:layout_toRightOf="@id/ADI_dream_image"
            android:layout_toStartOf="@id/ADI_target_amount"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Dream 1" />

        <TextView
            android:id="@+id/ADI_to_spent_per_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ADI_target_amount"
            android:layout_margin="@dimen/label_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="1000.50" />

        <TextView
            android:id="@+id/ADI_achieve_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ADI_dream_name"
            android:layout_alignStart="@id/ADI_dream_name"
            android:layout_below="@id/ADI_dream_name"
            android:layout_marginTop="@dimen/label_margin"
            android:layout_toLeftOf="@id/ADI_to_spent_per_month"
            android:layout_toStartOf="@id/ADI_to_spent_per_month"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="achieve on march 2020" />


        <ProgressBar
            android:id="@+id/ADI_dream_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/ADI_achieve_on"
            android:layout_margin="@dimen/label_margin"
            android:layout_toEndOf="@id/ADI_dream_image"
            android:layout_toRightOf="@id/ADI_dream_image"
            tools:progress="50" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
